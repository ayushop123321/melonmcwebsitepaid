# Redirects for Netlify

# Default landing page
/  /home.html 200

# Fallback for single page application (SPA)
/*  /index.html  200

# Admin panel should not redirect to index.html
/admin/*  /admin/index.html  200

# Bypass redirects for static files
/*.css   /:splat   200
/*.js    /:splat   200
/*.png   /:splat   200
/*.jpg   /:splat   200
/*.svg   /:splat   200
/*.ico   /:splat   200

# Allow direct access to pages
/home.html  /home.html  200
/ranks.html /ranks.html 200
/features.html /features.html 200
/rules.html /rules.html 200 